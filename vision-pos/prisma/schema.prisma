// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ============================================================================
// CORE ENTITIES - Week 1 Foundation
// ============================================================================

model Location {
  id          String   @id @default(cuid())
  name        String   @unique // "Downtown", "Westside"
  address     String
  phone       String?
  timezone    String   @default("America/Los_Angeles")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  users       User[]
  products    ProductLocation[]
  transactions Transaction[]
  inventory   Inventory[]
  purchaseOrders PurchaseOrder[]
  
  @@map("locations")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  passwordHash String?
  role        UserRole @default(SALES_ASSOCIATE)
  locationId  String
  firstName   String
  lastName    String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  location    Location @relation(fields: [locationId], references: [id])
  transactions Transaction[]
  inventoryMovements InventoryMovement[]
  purchaseOrders PurchaseOrder[]
  
  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  SALES_ASSOCIATE
}

model InsuranceCarrier {
  id          String   @id @default(cuid())
  name        String   @unique // "VSP", "EyeMed", "Spectera"
  code        String   @unique // "vsp", "eyemed", "spectera"
  active      Boolean  @default(true)
  config      Json?    // Carrier-specific configuration
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("insurance_carriers")
}

model ProductCategory {
  id          String   @id @default(cuid())
  name        String   @unique // "Frames", "Lenses", "Coatings", "Add-ons", "Contacts"
  code        String   @unique // "frames", "lenses", "coatings", "addons", "contacts"
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  products    Product[]
  
  @@map("product_categories")
}

model Product {
  id              String   @id @default(cuid())
  name            String
  sku             String?  @unique
  categoryId      String
  manufacturer    String?
  basePrice       Float    // Using Float for SQLite compatibility
  
  // Insurance tier mappings
  tierVsp         String?  // K, J, F, O, N for progressives
  tierEyemed      String?  // tier_1, tier_2, tier_3, tier_4, tier_5
  tierSpectera    String?  // I, II, III, IV, V
  
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  category        ProductCategory @relation(fields: [categoryId], references: [id])
  locations       ProductLocation[]
  transactionItems TransactionItem[]
  inventory       Inventory[]
  suppliers       ProductSupplier[]
  purchaseOrderItems PurchaseOrderItem[]
  
  @@map("products")
}

model ProductLocation {
  id          String   @id @default(cuid())
  productId   String
  locationId  String
  priceOverride Float? // Location-specific price override
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  product     Product  @relation(fields: [productId], references: [id])
  location    Location @relation(fields: [locationId], references: [id])
  
  @@unique([productId, locationId])
  @@map("product_locations")
}

// ============================================================================
// CUSTOMER & TRANSACTION MODELS - Week 1 Day 4
// ============================================================================

model Customer {
  id              String   @id @default(cuid())
  firstName       String
  lastName        String
  email           String?
  phone           String?
  dateOfBirth     DateTime?
  gender          Gender?
  
  // Legacy fields for migration compatibility
  address         String?  // Will be migrated to CustomerAddress
  city            String?  // Will be migrated to CustomerAddress  
  state           String?  // Will be migrated to CustomerAddress
  zipCode         String?  // Will be migrated to CustomerAddress
  insuranceCarrier String? // Will be migrated to CustomerInsurance
  memberId        String? // Will be migrated to CustomerInsurance
  groupNumber     String? // Will be migrated to CustomerInsurance
  eligibilityDate DateTime? // Will be migrated to CustomerInsurance
  active          Boolean  @default(true) // Will be migrated to accountStatus
  
  // New account information
  customerNumber  String?  @unique // Made optional for migration
  accountStatus   AccountStatus @default(ACTIVE)
  registrationDate DateTime @default(now())
  lastVisit       DateTime?
  
  // Analytics fields
  totalSpent      Float    @default(0)
  averageOrderValue Float  @default(0)
  customerLifetimeValue Float @default(0)
  lastPurchaseDate DateTime?
  isHighValueCustomer Boolean @default(false)
  isFrequentCustomer Boolean @default(false)
  riskLevel       RiskLevel @default(LOW)
  
  // Marketing and communication
  marketingConsent Boolean @default(false)
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdBy       String?
  updatedBy       String?
  
  // Relations
  addresses       CustomerAddress[]
  insuranceInfo   CustomerInsurance[]
  preferences     CustomerPreferences?
  eyewearPreferences EyewearPreferences?
  communicationPreferences CommunicationPreferences?
  relationships   CustomerRelationship[] @relation("PrimaryCustomer")
  relatedTo       CustomerRelationship[] @relation("RelatedCustomer")
  purchaseHistory CustomerPurchaseHistory[]
  visitHistory    CustomerVisit[]
  prescriptions   EyePrescription[]
  tags            CustomerTagAssignment[]
  transactions    Transaction[]
  
  @@map("customers")
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum AccountStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

model CustomerAddress {
  id          String   @id @default(cuid())
  customerId  String
  type        AddressType
  street      String
  street2     String?
  city        String
  state       String
  zipCode     String
  country     String   @default("USA")
  isPrimary   Boolean  @default(false)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  customer    Customer @relation(fields: [customerId], references: [id])
  
  @@map("customer_addresses")
}

enum AddressType {
  HOME
  WORK
  BILLING
  SHIPPING
  OTHER
}

model CustomerInsurance {
  id              String   @id @default(cuid())
  customerId      String
  carrier         String
  planName        String?
  planType        InsurancePlanType
  memberId        String
  groupNumber     String?
  effectiveDate   DateTime
  expirationDate  DateTime?
  copayAmount     Float?
  deductible      Float?
  isPrimary       Boolean  @default(false)
  isActive        Boolean  @default(true)
  
  // Dependent information
  subscriberName  String?
  relationshipToSubscriber RelationshipType?
  
  // Coverage details stored as JSON
  coverageDetails Json
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("customer_insurance")
}

enum InsurancePlanType {
  VISION
  MEDICAL
  BOTH
}

enum RelationshipType {
  SELF
  SPOUSE
  CHILD
  DEPENDENT
  OTHER
}

model CustomerPreferences {
  id              String   @id @default(cuid())
  customerId      String   @unique
  
  preferredContactMethod ContactMethod @default(EMAIL)
  appointmentReminders Boolean @default(true)
  promotionalEmails Boolean @default(false)
  language        String   @default("en")
  timezone        String   @default("America/New_York")
  
  // Shopping preferences stored as JSON
  preferredBrands Json     @default("[]")
  budgetRange     Json?
  
  // Accessibility needs
  largeFont       Boolean  @default(false)
  audioAssistance Boolean  @default(false)
  wheelchairAccessible Boolean @default(false)
  
  // Visit preferences stored as JSON
  preferredProviders Json   @default("[]")
  preferredAppointmentTimes Json @default("[]")
  specialInstructions String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("customer_preferences")
}

enum ContactMethod {
  EMAIL
  PHONE
  SMS
  MAIL
}

model EyewearPreferences {
  id              String   @id @default(cuid())
  customerId      String   @unique
  
  // Preferences stored as JSON arrays
  frameStyles     Json     @default("[]")
  frameMaterials  Json     @default("[]")
  frameColors     Json     @default("[]")
  lensTypes       Json     @default("[]")
  lensCoatings    Json     @default("[]")
  contactLensBrands Json   @default("[]")
  contactLensTypes Json    @default("[]")
  
  // Budget preferences
  framesBudget    Float?
  contactsBudget  Float?
  
  // Special needs
  safetyRequirements Boolean @default(false)
  computerGlasses Boolean  @default(false)
  sportsEyewear   Boolean  @default(false)
  fashionPriority Priority @default(MEDIUM)
  comfortPriority Priority @default(HIGH)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("eyewear_preferences")
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

model CommunicationPreferences {
  id            String   @id @default(cuid())
  customerId    String   @unique
  
  // Email preferences as individual boolean fields for SQLite compatibility
  emailAppointments    Boolean @default(true)
  emailPromotions      Boolean @default(false) 
  emailReminders       Boolean @default(true)
  emailNewsletters     Boolean @default(false)
  
  // SMS preferences
  smsAppointments      Boolean @default(true)
  smsPickupReady       Boolean @default(true)
  smsPromotions        Boolean @default(false)
  
  // Phone preferences
  phoneAppointments    Boolean @default(false)
  phoneFollowUp        Boolean @default(false)
  phoneEmergencyContact Boolean @default(true)
  
  // Mailing preferences
  mailingStatements    Boolean @default(true)
  mailingPromotions    Boolean @default(false)
  mailingCatalogs      Boolean @default(false)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  customer      Customer @relation(fields: [customerId], references: [id], onDelete: Restrict)
  
  @@map("communication_preferences")
}

model CustomerRelationship {
  id              String   @id @default(cuid())
  primaryCustomerId String
  relatedCustomerId String
  relationshipType CustomerRelationshipType
  isActive        Boolean  @default(true)
  notes           String?
  
  createdAt       DateTime @default(now())
  
  // Relations
  primaryCustomer Customer @relation("PrimaryCustomer", fields: [primaryCustomerId], references: [id])
  relatedCustomer Customer @relation("RelatedCustomer", fields: [relatedCustomerId], references: [id])
  
  @@unique([primaryCustomerId, relatedCustomerId])
  @@map("customer_relationships")
}

enum CustomerRelationshipType {
  SPOUSE
  CHILD
  PARENT
  SIBLING
  GUARDIAN
  DEPENDENT
  OTHER
}

model CustomerPurchaseHistory {
  id              String   @id @default(cuid())
  customerId      String
  transactionId   String
  orderDate       DateTime
  totalAmount     Float
  paymentMethod   String
  
  // Eye care specific
  prescriptionUsed String?
  providerId      String?
  
  // Items stored as JSON text for SQLite compatibility
  itemsJson       String   @default("[]")
  
  createdAt       DateTime @default(now())
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("customer_purchase_history")
}

model CustomerVisit {
  id              String   @id @default(cuid())
  customerId      String
  visitDate       DateTime
  visitType       VisitType
  providerId      String?
  providerName    String?
  duration        Int?     // minutes
  notes           String?
  outcome         String?
  nextAppointmentRecommended Boolean @default(false)
  
  createdAt       DateTime @default(now())
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("customer_visits")
}

enum VisitType {
  EXAM
  FITTING
  PICKUP
  ADJUSTMENT
  CONSULTATION
  FOLLOW_UP
}

model EyePrescription {
  id              String   @id @default(cuid())
  customerId      String
  prescriptionDate DateTime
  providerId      String?
  providerName    String?
  
  // Eye measurements stored as JSON text for SQLite
  rightEyeJson    String   @default("{}")
  leftEyeJson     String   @default("{}")
  
  // Additional measurements
  pupillaryDistance Float?
  bifocalHeight   Float?
  
  // Prescription details
  prescriptionType PrescriptionType
  notes           String?
  
  // Validity
  expirationDate  DateTime?
  isActive        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  
  @@map("eye_prescriptions")
}

enum PrescriptionType {
  DISTANCE
  READING
  BIFOCAL
  PROGRESSIVE
  COMPUTER
}

model CustomerTag {
  id              String   @id @default(cuid())
  name            String   @unique
  color           String?
  category        TagCategory?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  assignments     CustomerTagAssignment[]
  
  @@map("customer_tags")
}

enum TagCategory {
  PREFERENCE
  MEDICAL
  BUSINESS
  BEHAVIOR
  OTHER
}

model CustomerTagAssignment {
  id              String   @id @default(cuid())
  customerId      String
  tagId           String
  
  createdAt       DateTime @default(now())
  
  // Relations
  customer        Customer    @relation(fields: [customerId], references: [id])
  tag             CustomerTag @relation(fields: [tagId], references: [id])
  
  @@unique([customerId, tagId])
  @@map("customer_tag_assignments")
}

model Transaction {
  id              String   @id @default(cuid())
  customerId      String
  userId          String   // Sales associate who processed
  locationId      String
  
  // Transaction Details
  subtotal        Float
  tax             Float
  discount        Float    @default(0)
  total           Float
  
  // Insurance Information
  insuranceCarrier String?
  insuranceDiscount Float   @default(0)
  patientPortion  Float
  
  // Transaction Status
  status          TransactionStatus @default(PENDING)
  paymentMethod   String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  customer        Customer @relation(fields: [customerId], references: [id])
  user            User     @relation(fields: [userId], references: [id])
  location        Location @relation(fields: [locationId], references: [id])
  items           TransactionItem[]
  
  @@map("transactions")
}

enum TransactionStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED
}

model TransactionItem {
  id              String   @id @default(cuid())
  transactionId   String
  productId       String
  quantity        Int      @default(1)
  unitPrice       Float
  discount        Float    @default(0)
  total           Float
  
  // Insurance calculations
  insuranceTier   String?
  insuranceDiscount Float   @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  transaction     Transaction @relation(fields: [transactionId], references: [id])
  product         Product     @relation(fields: [productId], references: [id])
  
  @@map("transaction_items")
}

// ============================================================================
// INVENTORY MANAGEMENT MODELS - Week 1 Day 5
// ============================================================================

model Inventory {
  id              String   @id @default(cuid())
  productId       String
  locationId      String
  
  // Stock Information
  currentStock    Int      @default(0)
  reservedStock   Int      @default(0) // Items reserved for orders
  availableStock  Int      @default(0) // currentStock - reservedStock
  
  // Reorder Information
  reorderPoint    Int      @default(5)  // When to reorder
  reorderQuantity Int      @default(20) // How many to order
  maxStock        Int?     // Maximum stock level
  
  // Cost Information
  costPrice       Float?   // What we paid for the item
  lastCostPrice   Float?   // Previous cost price for comparison
  
  // Tracking
  lastRestocked   DateTime?
  lastSold        DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  product         Product  @relation(fields: [productId], references: [id])
  location        Location @relation(fields: [locationId], references: [id])
  movements       InventoryMovement[]
  
  @@unique([productId, locationId])
  @@map("inventory")
}

model InventoryMovement {
  id              String   @id @default(cuid())
  inventoryId     String
  
  // Movement Details
  type            MovementType
  quantity        Int      // Positive for additions, negative for reductions
  reason          String?  // Optional reason for the movement
  
  // Reference Information
  referenceType   String?  // "transaction", "adjustment", "restock", "transfer"
  referenceId     String?  // ID of the related record
  
  // Cost tracking
  unitCost        Float?   // Cost per unit for this movement
  
  // User tracking
  userId          String?
  notes           String?
  
  createdAt       DateTime @default(now())
  
  // Relations
  inventory       Inventory @relation(fields: [inventoryId], references: [id])
  user            User?     @relation(fields: [userId], references: [id])
  
  @@map("inventory_movements")
}

enum MovementType {
  SALE          // Stock reduction from sale
  RETURN        // Stock increase from return
  RESTOCK       // Stock increase from receiving shipment
  ADJUSTMENT    // Manual stock adjustment (positive or negative)
  TRANSFER_IN   // Stock increase from transfer from another location
  TRANSFER_OUT  // Stock reduction from transfer to another location
  DAMAGED       // Stock reduction due to damage
  EXPIRED       // Stock reduction due to expiration
  LOST          // Stock reduction due to loss/theft
}

model Supplier {
  id              String   @id @default(cuid())
  name            String   @unique
  contactName     String?
  email           String?
  phone           String?
  
  // Address
  address         String?
  city            String?
  state           String?
  zipCode         String?
  country         String   @default("USA")
  
  // Business Information
  website         String?
  taxId           String?
  paymentTerms    String?  // "Net 30", "COD", etc.
  
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  products        ProductSupplier[]
  purchaseOrders  PurchaseOrder[]
  
  @@map("suppliers")
}

model ProductSupplier {
  id              String   @id @default(cuid())
  productId       String
  supplierId      String
  
  // Supplier-specific information
  supplierSku     String?  // Supplier's SKU for this product
  supplierPrice   Float?   // Current price from supplier
  leadTimeDays    Int?     // Days to deliver
  minimumOrder    Int      @default(1)
  
  isPrimary       Boolean  @default(false) // Primary supplier for this product
  active          Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  product         Product  @relation(fields: [productId], references: [id])
  supplier        Supplier @relation(fields: [supplierId], references: [id])
  
  @@unique([productId, supplierId])
  @@map("product_suppliers")
}

model PurchaseOrder {
  id              String   @id @default(cuid())
  supplierId      String
  locationId      String
  userId          String   // User who created the order
  
  // Order Information
  orderNumber     String   @unique
  status          PurchaseOrderStatus @default(PENDING)
  
  // Financial Information
  subtotal        Float
  tax             Float    @default(0)
  shipping        Float    @default(0)
  total           Float
  
  // Dates
  orderDate       DateTime @default(now())
  expectedDate    DateTime?
  receivedDate    DateTime?
  
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  supplier        Supplier @relation(fields: [supplierId], references: [id])
  location        Location @relation(fields: [locationId], references: [id])
  user            User     @relation(fields: [userId], references: [id])
  items           PurchaseOrderItem[]
  
  @@map("purchase_orders")
}

enum PurchaseOrderStatus {
  PENDING
  SENT
  CONFIRMED
  PARTIALLY_RECEIVED
  RECEIVED
  CANCELLED
}

model PurchaseOrderItem {
  id              String   @id @default(cuid())
  purchaseOrderId String
  productId       String
  
  // Order Details
  quantityOrdered Int
  quantityReceived Int      @default(0)
  unitCost        Float
  total           Float
  
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  product         Product       @relation(fields: [productId], references: [id])
  
  @@map("purchase_order_items")
}